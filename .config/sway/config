# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Keyboard layout
input * {
    xkb_layout "de"
    xkb_variant "neo"
}

# Deamons
exec gentoo-pipewire-launcher

# Themes
seat seat0 xcursor_theme Adwaita 24
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita'
    gsettings set $gnome-schema icon-theme 'Adwaita'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name 'DejaVu Sans'
}

# Wallpaper
set $wallpapers_path $HOME/.nocdp/wallpaper
output * background $(find $wallpapers_path -type f | shuf -n 1) fill

# Font for window titles. Will also be used by the bar unless a different font
font pango:DejaVu Sans 8

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

# Borders without title bar
default_border pixel 2
default_floating_border pixel 2

# Hide borders adjacent to the screen edge
hide_edge_borders smart

# Assignments for clients
assign [class="^Firefox$"] "1: web"
assign [class="^Thunderbird$"] "9: mail"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec kitty

# start a non-tmux terminal
bindsym $mod+Shift+Return exec kitty -e bash

# kill focused window
bindsym $mod+Shift+X kill

# start dmenu (a program launcher)
bindsym $mod+a exec dmenu_run

# change focus
bindsym $mod+n focus left
bindsym $mod+r focus down
bindsym $mod+t focus up
bindsym $mod+d focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+N move left
bindsym $mod+Shift+R move down
bindsym $mod+Shift+T move up
bindsym $mod+Shift+D move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+s split h

# split in vertical orientation
bindsym $mod+p split v

# enter fullscreen mode for the focused container
bindsym $mod+e fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+i layout stacking
bindsym $mod+v layout tabbed
bindsym $mod+l layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+u focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace "1: web"
bindsym $mod+2 workspace "2: edit"
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace "7: edit2"
bindsym $mod+8 workspace "8: music"
bindsym $mod+9 workspace "9: mail"
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace "1: web"
bindsym $mod+Shift+2 move container to workspace "2: edit"
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace "7: edit2"
bindsym $mod+Shift+8 move container to workspace "8: music"
bindsym $mod+Shift+9 move container to workspace "9: mail"
bindsym $mod+Shift+0 move container to workspace 10

# switch to output
bindsym $mod+h focus output left
bindsym $mod+q focus output right

# move focused container to output
bindsym $mod+Shift+h move container to output left
bindsym $mod+Shift+q move container to output right

# move current workspace to output
bindsym $mod+g move workspace to output left
bindsym $mod+f move workspace to output right

# reload the configuration file
bindsym $mod+Shift+adiaeresis exec mki3config ; reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+C exec mki3config ; restart
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+L exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+L exec i3-msg exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym n resize shrink width 10 px or 10 ppt
        bindsym r resize grow height 10 px or 10 ppt
        bindsym t resize shrink height 10 px or 10 ppt
        bindsym d resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+c mode "resize"

